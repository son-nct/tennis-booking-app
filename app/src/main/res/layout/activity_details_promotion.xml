<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsPromotion">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageBackground"
                android:layout_width="893dp"
                android:layout_height="294dp"
                android:layout_gravity="center"
                android:src="@drawable/backgroundtennis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.578"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageSale"
                android:layout_width="127dp"
                android:layout_height="148dp"
                android:layout_gravity="right"
                android:layout_marginTop="-290dp"
                android:src="@drawable/sale"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="409dp"
                android:layout_height="346dp"
                android:src="@drawable/rectangle"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="131dp" />

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-360dp"
                android:padding="18dp"
                android:text="Thủ Đức Tennis - Đường số 18. Hoàng Diệu 2 . Thủ Đức"
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/straight1"
                tools:ignore="DuplicateIds,MissingConstraints" />


            <ImageView
                android:id="@+id/imageStar5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_star_svgrepo_com"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-13dp"
                android:fontFamily="@font/inter_bold"
                android:text="4.8(901)"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageDot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-15dp"
                android:src="@drawable/dot"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginLeft="220dp"
                android:text="Đánh Giá Và Nhận Xét"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageStraight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-85dp"
                android:src="@drawable/straight1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/straight1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:src="@drawable/straight1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imgPromotion"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_promotion_svgrepo_com"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <TextView
                android:id="@+id/txtPromotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-28dp"
                android:layout_marginLeft="50dp"
                android:text="Xem Ưu Đãi Sẵn Có"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                tools:ignore="MissingConstraints">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ListView
                android:id="@+id/lvSanKM"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>