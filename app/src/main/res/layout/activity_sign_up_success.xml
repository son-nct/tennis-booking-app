<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22C866"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre_medium"
        android:text="Congrats"
        android:textColor="@color/white"
        android:textSize="60sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView

        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:letterSpacing="0.05"
        android:text="New enjoy life during the time you trust saved!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/tenis_congrats"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="-34dp" />

    <RelativeLayout
        android:id="@+id/layoutSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="600dp">
        />

        <Button
            android:id="@+id/btnSuccess"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/abhaya_libre_medium"
            android:text="Thành công!!"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>