<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvSan"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <ImageView
        android:id="@+id/imgHinhPromo"
        android:layout_width="140dp"
        app:srcCompat="@drawable/san1a"
        android:layout_marginTop="-25dp"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/txtTenSanPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Tên sân nè"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtDienTichPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:text="Diện tích"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtCodePromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:text="Discount code"
        android:textColor="@color/red"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtGiaPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:text="giá tiền"
        android:textSize="12dp"
        android:textStyle="italic" />


    <LinearLayout
        android:id="@+id/loRatingDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rate" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/ic_star_svgrepo_com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtKhoangCach"
            android:text="distance" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_location" />
    </LinearLayout>


</RelativeLayout>