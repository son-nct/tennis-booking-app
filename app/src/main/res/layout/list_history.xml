<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp">

        <TextView
            android:id="@+id/txtHistory"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alata"
            android:text="Lịch Sử Đặt Sân"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/txtTenHis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/imgLogo"
        android:fontFamily="@font/inter"
        android:text="Tên Sân"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtCaHis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTenHis"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/imgLogo"
        android:fontFamily="@font/inter"
        android:text="Slot chơi"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtNgayGio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCaHis"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imgLogo"
        android:fontFamily="@font/inter"
        android:text="Ngày giờ đặt"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtTienHis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/inter"
        android:text="Giá Tiền"
        android:textColor="@color/black"
        android:textSize="12dp" />


</RelativeLayout>