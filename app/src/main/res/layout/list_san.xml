<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtTensan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgHinh"
        android:text="Ten San"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtDientich"
        android:layout_toRightOf="@id/imgHinh"
        android:layout_below="@+id/txtTensan"
        android:text="Dien Tich"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDientich"
        android:layout_toRightOf="@id/imgHinh"
        android:layout_marginLeft="10dp"
        android:text="Gia Tien"
        android:textSize="20dp" />
</RelativeLayout>